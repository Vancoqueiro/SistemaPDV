@model SistemaPdv.Core.ViewModel.ProdutoViewModel

@{
    ViewBag.Title = "Create";

    List<SelectListItem> itens = SistemaPdv.Core.Entity.TipoProdutoEntity.Pesquisar().Select(x => new SelectListItem { Value = x.id_tipo_produto.ToString(), Text = x.descricao }).ToList();

}

<h2>Create</h2>

